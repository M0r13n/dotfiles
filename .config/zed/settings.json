// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "icon_theme": "Material Icon Theme",
  "disable_ai": true,
  "agent": {
    "enable_feedback": false,
    "single_file_review": false,
    "button": false,
    "model_parameters": []
  },
  "toolbar": {
    "agent_review": false
  },
  "format_on_save": "on",
  "formatter": "language_server",
  "ssh_connections": [],
  "telemetry": {
    "diagnostics": true,
    "metrics": false,
  },
  "ui_font_size": 18.0,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark",
  },
  "languages": {
    "Python": {
      "language_servers": ["ty", "!basedpyright"],
      "formatter": {
        "external": {
              "command": "/home/ubuntu/.local/share/tools_venv/bin/autopep8",
              "arguments": ["-"]
        }
      }
    },
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/.sl",
    "**/.repo",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.mypy_cache",
    "**/__pycache__",
    "**/venv",
    "**/.venv",
  ],
}
